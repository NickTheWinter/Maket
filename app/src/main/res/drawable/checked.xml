<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval" android:thickness="5dp"
            android:useLevel="false">
            <size android:height="100dp" android:width="100dp"/>
            <stroke android:color="@color/pink_400" android:width="12dp"/>
            <solid android:color="@color/gray_900"/>
            <padding android:right="10dp" android:left="10dp" android:bottom="10dp" android:top="10dp"/>
        </shape>
    </item>
    <item>
        <inset
            android:drawable="@drawable/arrow"/>
    </item>
</layer-list>